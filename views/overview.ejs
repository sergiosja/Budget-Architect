<!DOCTYPE html>
<html lang="en">
<head>
    <title> YBA </title>
    <link rel="stylesheet" type="text/css" href="/CSS/overview.css">
</head>
<body>
    <% var list = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"] %>
    <h1> <%= list[new Date().getMonth()] + " " + new Date().getFullYear() %> </h1>

    <div id="container">
        <div class="box" id="in">
            <h3> Income </h3>
            <% income.forEach (func => { %>
                <h2> <%= func.row %> </h2>
            <% }) %>
        </div>

        <div class="box" id="main">
            <h3> Your current </h3>
            <% total.forEach (func => { %>
                <h2> <%= func.row %> </h2>
            <% }) %>
        </div>

        <div class="box" id="out">
            <h3> Outgoing </h3>
            <% outgoing.forEach (func => { %>
                <h2> <%= func.row %> </h2>
            <% }) %>
        </div>
    </div>

    <div id="container">
        <h2 id="header"> <%= list[new Date().getMonth()] %> History </h1>
    </div>

    <div id="container">
        <table>
            <tr>
                <% header.forEach (func => { %>
                    <th style="background: #000;"> <%= func.row %> </th>
                <% }) %>
            </tr>

            <% historyIn.forEach (func => { %>
                <tr id="in">
                    <td> <%= func.row %> </td>
                    <td> <%= func.tmpDate %> </td>
                    <td> <%= func.source %> </td>
                    <td> <%= func.matter %> </td>
                    <td> <%= func.category %> </td>
                    <td> <%= func.price %> </td>
                </tr>
            <% }) %>

            <% historyOut.forEach (func => { %>
                <tr id="out">
                    <td> <%= func.row %> </td>
                    <td> <%= func.tmpDate %> </td>
                    <td> <%= func.source %> </td>
                    <td> <%= func.matter %> </td>
                    <td> <%= func.category %> </td>
                    <td> <%= func.price %> </td>
                </tr>
            <% }) %>
        </table>
    </div>

    <button type="button" style="margin-top: 100px;"> <a href="/users/month"> Back </a> </button>
</body>
</html>